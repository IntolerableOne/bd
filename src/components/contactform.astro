---
// Fixed debug version of contact form
import Button from "./ui/button.astro";
---

<form id="contact-form">
  <div class="mb-5">
    <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
    <input
      type="text"
      id="name"
      name="name"
      required
      class="w-full px-4 py-3 border-2 rounded-md"
      placeholder="Your name"
    />
  </div>
  
  <div class="mb-5">
    <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
    <input
      type="email"
      id="email"
      name="email"
      required
      class="w-full px-4 py-3 border-2 rounded-md"
      placeholder="your@email.com"
    />
  </div>
  
  <div class="mb-5">
    <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
    <textarea
      id="message"
      name="message"
      required
      minlength="5"
      rows="4"
      class="w-full px-4 py-3 border-2 rounded-md"
      placeholder="Please describe how we can help you (minimum 5 characters)"
    ></textarea>
    <div class="text-sm text-gray-500 mt-1">Minimum 5 characters required</div>
  </div>
  
  <button type="submit" class="bg-green-700 text-white px-6 py-3 rounded-lg hover:bg-green-800">
    Send Message
  </button>
  
  <div id="status" class="mt-4"></div>
</form>

<script is:inline>
  console.log('ğŸ” Contact form script starting...');
  
  document.addEventListener('DOMContentLoaded', function() {
    console.log('ğŸ” DOM loaded');
    
    const form = document.getElementById('contact-form');
    const statusDiv = document.getElementById('status');
    
    if (!form) {
      console.error('âŒ Form not found!');
      return;
    }
    
    if (!statusDiv) {
      console.error('âŒ Status div not found!');
      return;
    }
    
    console.log('âœ… Form and status div found');
    
    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      console.log('ğŸ” Form submitted!');
      
      statusDiv.innerHTML = 'ğŸ” Testing form submission...';
      statusDiv.className = 'text-blue-600 p-3 bg-blue-50 rounded';
      
      const formData = new FormData(form);
      const data = {
        name: formData.get('name'),
        email: formData.get('email'),
        message: formData.get('message')
      };
      
      console.log('ğŸ” Form data:', data);
      
      try {
        statusDiv.innerHTML = 'ğŸ“¡ Sending to server...';
        
        const response = await fetch('/api/contact', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data)
        });
        
        console.log('ğŸ” Response status:', response.status);
        
        const result = await response.json();
        console.log('ğŸ” Response data:', result);
        
        if (response.ok && result.success) {
          statusDiv.innerHTML = 'âœ… Message sent successfully!';
          statusDiv.className = 'text-green-600 p-3 bg-green-50 rounded';
          form.reset();
        } else {
          statusDiv.innerHTML = 'âŒ Error: ' + (result.error || 'Unknown error');
          statusDiv.className = 'text-red-600 p-3 bg-red-50 rounded';
        }
        
      } catch (error) {
        console.error('âŒ Network error:', error);
        statusDiv.innerHTML = 'âŒ Network error: ' + error.message;
        statusDiv.className = 'text-red-600 p-3 bg-red-50 rounded';
      }
    });
    
    console.log('âœ… Event listener attached');
  });
</script>