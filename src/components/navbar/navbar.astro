---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "Services",
    path: "#",
    children: [
      { title: "Video Consultations", path: "/" },
    ],
  },
  {
    title: "Our Team",
    path: "/about",
  },
  {
    title: "Testimonials",
    path: "/testimonials",
  },
  {
    title: "FAQ",
    path: "/faq",
  },
  {
    title: "Blog",
    path: "/blog",
  },
  {
    title: "Contact",
    path: "#",
  },
];
