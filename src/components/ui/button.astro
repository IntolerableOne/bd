---
export interface Props {
  href?: string;
  size?: "md" | "lg";
  style?: "primary" | "outline";
  block?: boolean;
  class?: string;
  [key: string]: any;
}

const { 
  href, 
  block, 
  size = "md", 
  style = "primary", 
  class: className, 
  ...rest
} = Astro.props;

const sizes = {
  md: "px-5 py-2.5",
  lg: "px-6 py-3"
};

const styles = {
  primary: "font-medium bg-green-600 text-white border-2 border-green-800 hover:border-green-900 hover:bg-green-800",
  outline: "font-medium bg-white border-2 border-green-600 hover:border-green-900 hover:bg-green-100"
};

const baseStyles = "rounded-md transition focus:ring-2 focus:ring-offset-2 focus:ring-green-500";
---

{
  href ? (
    <a
      href={href}
      {...rest}
      class:list={[
        baseStyles,
        sizes[size],
        styles[style],
        block && "w-full text-center",
        className
      ]}>
      <slot />
    </a>
  ) : (
    <button
      {...rest}
      class:list={[
        baseStyles,
        sizes[size],
        styles[style],
        block && "w-full",
        className
      ]}>
      <slot />
    </button>
  )
}