---
import Button from "@components/ui/button.astro";
import Icon from "@components/ui/icon.astro";
---
<div class="bg-green-700 p-8 md:px-20 md:py-20 mt-20 mx-auto rounded-lg flex flex-col items-center text-center">
  <h2 class="text-white text-4xl md:text-6xl font-bold tracking-tight">
    Get Support Now
  </h2>
  <p class="text-white mt-4 mb-4 text-lg md:text-xl">
    Access professional support for pregnancy challenges and postnatal care.
  </p>
  <div class="flex mt-5">
    <Button
      href="/booking"
      style="primary"
      class="flex items-center justify-center gap-2">
      <Icon name="bx:bxs-calendar-heart" />
      Book Appointment
    </Button>
  </div>
</div>