---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import BookingPanel from "../components/booking/BookingPanel.svelte";
---

<Layout title="Book Your Session">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Book Your Session</Fragment>
      <Fragment slot="desc">
        Schedule your 1-hour consultation with one of our experienced midwives.
      </Fragment>
    </Sectionhead>

    <div class="mt-16 max-w-4xl mx-auto">
      <BookingPanel client:load />
    </div>
  </Container>
</Layout>